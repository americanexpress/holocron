{
  "name": "holocron-build",
  "private": true,
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "preinstall": "node scripts/check-versions.js",
    "postinstall": "lerna bootstrap",
    "clean": "git clean -d -X",
    "lint": "eslint --ext js,jsx,snap packages",
    "test": "NODE_ENV=development jest",
    "test:git-history": "commitlint --from origin/master --to HEAD",
    "test:lockfile": "node lockFileLint.js",
    "posttest": "npm run lint && npm run test:git-history && npm run test:lockfile",
    "lerna:version": "lerna version",
    "lerna:publish": "lerna publish from-package --yes",
    "lerna:deploy": "node lernaDeploy.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "amex-jest-preset-react": "^5.0.2",
    "babel-preset-amex": "^2.1.0",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^6.8.0",
    "eslint-config-amex": "^11.2.0",
    "husky": "^4.0.10",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lockfile-lint": "^4.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/americanexpress/holocron.git"
  },
  "jest": {
    "preset": "amex-jest-preset-react",
    "collectCoverageFrom": [
      "/*.{js,jsx}",
      "packages/*/src/*.{js,jsx}"
    ],
    "setupFiles": [
      "./test-setup.js"
    ],
    "moduleNameMapper": {
      "react$": "<rootDir>/node_modules/react",
      "react-dom$": "<rootDir>/node_modules/react-dom",
      "react-test-renderer$": "<rootDir>/node_modules/react-test-renderer"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
