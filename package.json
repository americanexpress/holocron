{
  "name": "holocron-build",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/americanexpress/holocron.git"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.12.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node scripts/check-versions.js",
    "postinstall": "yarn workspaces run build",
    "clean": "git clean -d -X",
    "lint": "eslint --ext js,jsx,snap .",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=development jest",
    "test:git-history": "commitlint --from origin/master --to HEAD",
    "test:lockfile": "lockfile-lint --path yarn.lock --allowed-hosts registry.yarnpkg.com --validate-https",
    "posttest": "yarn lint && yarn test:git-history && yarn test:lockfile",
    "release": "exit 0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.9.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "amex-jest-preset-react": "^6.1.0",
    "babel-jest": "^26.1.0",
    "babel-preset-amex": "^2.1.0",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^6.8.0",
    "eslint-config-amex": "^11.2.0",
    "husky": "^4.0.10",
    "jest": "^25.1.0",
    "lockfile-lint": "^4.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "regenerator-runtime": "^0.13.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
